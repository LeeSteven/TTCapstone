
@{
    ViewBag.Title = "ContactUs";
}
<html>


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=false">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css.css")
    @Styles.Render("~/Content/home.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/jquery.js")
    @Scripts.Render("~/Content/styles.css")
    @Scripts.Render("~/Content/contact.js")
    @Scripts.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/jquery")

    <style>
        body {
            background: #FCB716;
        }

        iframe {
            width: 400px;
        }
    </style>
</head>

<body>

    <div id="locate" class="container">
        <h1 id="contact">Contact Us</h1>
        <div class="row">
            <div class="col-sm-6">


                <form>
                    <table class="table">
                        <tr>
                            <td> Name: </td>
                        </tr>
                        <tr>
                            <td><input type="text" id="Name" class="form-control" required /></td>
                        </tr>
                        <tr>
                            <td> Email: </td>
                        </tr>
                        <tr>
                            <td><input type="email" id="Email" class="form-control" required /></td>
                        </tr>
                        <tr>


                            <td> Subject: </td>
                        </tr>
                        <tr>
                            <td><input type="text" id="Subject" class="form-control" required /></td>

                        </tr>
                        <tr>
                            <td> Message: </td>
                        </tr>
                        <tr>
                            <td><textarea id="Message" class="form-control" rows="6" required></textarea></td>
                        </tr>

                        <tr>
                            <td style="text-align:center;">
                                <button type="submit" id="submitEmail" class="btn btn-default" onclick="SendEmail()">Submit</button>
                            </td>
                        </tr>
                    </table>

                </form>
            </div>
            <div class="col-sm-6">
                <div id="map"></div>
                <p id="addr">
                    12-16715, Suite 192, Yonge Street, Newmarket, ON L3X 1X4
                    <br> T: 416.804.0673
                    <br>E: info@reggaeforyou.com
                </p>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2868.299127733739!2d-79.47616778457875!3d44.035875979110024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882ad18627917b23%3A0x118c99fac55a355f!2s16715+Yonge+St%2C+Newmarket%2C+ON+L3X+2P8!5e0!3m2!1sen!2sca!4v1478262409755" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <br>
</body>
</html>
